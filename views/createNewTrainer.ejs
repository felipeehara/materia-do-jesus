<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/createTrainer.css">
    <title>Cadastrar Treinador</title>
</head>
<body>
    <h1>Cadastrar Novo Treinador</h1>
    <form action="/trainers/createTrainer" method="POST">
        <label for="name">Nome do Treinador:</label>
        <input type="text" id="name" name="name" required>

        <h2>Selecione os Pok√©mons:</h2>
        <% pokemons.forEach(function(pokemon) { %>
            <div class="checkbox-group">
                <input type="checkbox" id="pokemon<%= pokemon.id %>" name="pokemons" value="<%= pokemon.id %>">
                <label for="pokemon<%= pokemon.id %>"><%= pokemon.nome %> - <%= pokemon.tipo %></label>
            </div><br>
        <% }); %>

        <button type="submit">Cadastrar Treinador</button>
    </form>
    
    <a href="/trainers">
        <button>Voltar para a lista de treinadores</button>
    </a>
    <a href="/">
        <button>Voltar para a lista de Pokemons</button>
    </a>
    
</body>
</html>
